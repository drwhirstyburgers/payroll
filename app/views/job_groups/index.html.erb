<%= render 'layouts/partials/card_form' %>
  <div class="row">
    <div class="col-md-6">
        <h1 class="display-4">Job Groups</h1>
    </div>
    <div class="col-md-6">
        <%= link_to "New Job Group", new_job_group_path, class: "btn btn-dark float-right" %>
    </div>
  </div>
    <table class='table'>
        <thead class="thead-dark">
            <tr>
              <th>Name</th>
              <th>Wage</th>
              <th colspan="3"></th>
            </tr>
        </thead>

        <tbody>
          <% @job_groups.each do |job_group| %>
            <tr>
              <td><%= job_group.name %></td>
              <td><%= job_group.wage %></td>
              <td><%= link_to 'Show', job_group %></td>
              <td><%= link_to 'Edit', edit_job_group_path(job_group) %></td>
              <td><%= link_to 'Destroy', job_group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
<%= render 'layouts/partials/card_form_base' %>
